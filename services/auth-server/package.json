{
  "name": "auth-server",
  "version": "0.9.0",
  "scripts": {
    "clean": "rimraf dist && rimraf logs",
    "build": "flow-remove-types --out-dir dist/ src/",
    "dev": "nodemon --ignore dist --watch . --exec 'flow-node src/index.js'",
    "start": "node dist",
    "lint": "eslint src",
    "test": "jest",
    "test:watch": "jest --watch",
    "flow": "flow check",
    "format":
      "prettier --trailing-comma es5 --single-quote --write 'src/**/*.js' && yarn run lint -- --fix"
  },
  "jest": {
    "rootDir": "src",
    "testEnvironment": "node",
    "transform": {
      "\\.js$": "../../../node-packages/lagoon-commons/src/jest-flow-transform"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": ["prettier --trailing-comma all --single-quote", "eslint --fix", "git add"]
    },
    "gitDir": "../../"
  },
  "dependencies": {
    "@lagoon/commons": "3.0.2",
    "express": "^4.16.2",
    "flow-remove-types": "^1.2.1",
    "morgan": "^1.9.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "eslint": "^4.12.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-flowtype": "^2.35.0",
    "eslint-plugin-import": "^2.8.0",
    "nodemon": "^1.12.1",
    "prettier": "^1.8.2"
  }
}
