{
  "name": "auth-server",
  "version": "0.9.0",
  "scripts": {
    "clean": "rimraf dist && rimraf logs",
    "build": "flow-remove-types --out-dir dist/ src/",
    "dev": "nodemon --ignore dist --watch . --exec 'flow-node src/index.js'",
    "start": "node dist",
    "lint": "eslint src",
    "test": "jest",
    "test:watch": "jest --watch",
    "flow": "flow check",
    "format":
      "prettier --trailing-comma es5 --single-quote --write 'src/**/*.js' && yarn run lint -- --fix"
  },
  "dependencies": {
    "@lagoon/commons": "3.0.2",
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "flow-remove-types": "^1.2.3",
    "morgan": "^1.9.0",
    "nano": "^6.4.3",
    "prettier-eslint": "^8.8.1",
    "ramda": "^0.25.0",
    "sshpk": "^1.14.1",
    "winston": "^2.4.1"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "eslint": "4.9.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-flowtype": "^2.41.0",
    "eslint-plugin-import": "^2.7.0",
    "nodemon": "^1.12.1",
    "prettier": "^1.11.1"
  }
}
